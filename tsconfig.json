{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",
    "outDir": "build/main",
    "moduleResolution": "node16",
    "module": "Node16",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "lib": [
      "es2023"
    ],
    "paths": {
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}